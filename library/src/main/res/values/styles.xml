<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Protodroid.BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Protodroid.Theme" parent="Protodroid.BaseTheme" />

    <style name="Protodroid.ToolbarTitleTheme" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Protodroid.ToolbarSubtitleTheme" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">monospace</item>
    </style>
</resources>